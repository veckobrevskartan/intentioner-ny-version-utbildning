:root{
  --bg:#0b0c10;
  --fg:#e9ecf1;
  --muted:rgba(233,236,241,.72);
  --card:rgba(255,255,255,.06);
  --card2:rgba(255,255,255,.10);
  --border:rgba(255,255,255,.14);
  --shadow:0 14px 34px rgba(0,0,0,.45);
  --r:18px;
  --r2:22px;
  --max:1200px;

  /* Samma bildh√∂jd i alla moduler */
  --frameH: 320px;
}

@media (prefers-color-scheme: light){
  :root{
    --bg:#f7f7fb;
    --fg:#101118;
    --muted:rgba(16,17,24,.70);
    --card:rgba(16,17,24,.05);
    --card2:rgba(16,17,24,.08);
    --border:rgba(16,17,24,.12);
    --shadow:0 14px 34px rgba(0,0,0,.12);
  }
}

*{box-sizing:border-box}
html,body{height:100%}
body{
  margin:0;
  font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
  background:var(--bg);
  color:var(--fg);
  line-height:1.55;
}

a{color:inherit}
img{display:block; max-width:none}

.container{
  width:min(var(--max), calc(100% - 32px));
  margin:0 auto;
}

.topbar{
  position:sticky; top:0; z-index:50;
  backdrop-filter: blur(10px);
  background: color-mix(in srgb, var(--bg) 82%, transparent);
  border-bottom:1px solid var(--border);
}
.topbar__inner{
  padding:14px 0;
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:16px;
}
.brand__title{font-weight:900; letter-spacing:.2px}
.brand__subtitle{color:var(--muted); font-size:13px}

.topbar__actions{
  display:flex; gap:10px; align-items:center; flex-wrap:wrap;
}

.search{
  border:1px solid var(--border);
  background: color-mix(in srgb, var(--card2) 70%, transparent);
  color:var(--fg);
  padding:10px 12px;
  border-radius:999px;
  min-width: 260px;
  outline:none;
}
.search::placeholder{color:color-mix(in srgb, var(--muted) 75%, transparent)}
.search:focus{ box-shadow: 0 0 0 3px color-mix(in srgb, var(--fg) 12%, transparent); }

.btn{
  border:1px solid var(--border);
  background:var(--card2);
  color:var(--fg);
  padding:10px 12px;
  border-radius:12px;
  cursor:pointer;
  font-weight:750;
  font-size:13px;
}
.btn:hover{filter:brightness(1.06)}
.btn--ghost{background:transparent}
.btn--danger{
  background: rgba(220,38,38,.16);
  border-color: rgba(220,38,38,.30);
}

.iconbtn{
  border:1px solid var(--border);
  background: transparent;
  color: var(--fg);
  width: 44px;
  height: 38px;
  border-radius: 12px;
  cursor:pointer;
  font-weight:900;
  font-size:16px;
}
.iconbtn:hover{background:var(--card2)}

.hero{
  padding:18px 0 12px;
}
.hero h1{
  margin:0 0 6px 0;
  font-size: clamp(24px, 3.2vw, 38px);
  line-height:1.05;
}
.hero p{
  margin:0 0 14px 0;
  color:var(--muted);
  max-width: 78ch;
}

.tags{
  display:flex; gap:10px; flex-wrap:wrap;
}
.tag{
  border:1px solid var(--border);
  background: transparent;
  color: var(--muted);
  padding: 8px 12px;
  border-radius: 999px;
  cursor:pointer;
  font-weight: 750;
  font-size: 13px;
}
.tag:hover{ color:var(--fg); background:var(--card2); }
.tag.is-active{ color:var(--fg); background:var(--card2); }

.grid{
  display:grid;
  grid-template-columns: 1fr;
  gap: 14px;
  padding: 10px 0 18px;
}
@media (min-width: 900px){
  .grid{ grid-template-columns: 1fr 1fr; }
}
@media (min-width: 1220px){
  .grid{ grid-template-columns: 1fr 1fr 1fr; }
}

.module{
  border:1px solid var(--border);
  background: linear-gradient(180deg, var(--card2), var(--card));
  border-radius: var(--r2);
  box-shadow: var(--shadow);
  overflow:hidden;
  display:flex;
  flex-direction:column;
  min-height: 520px;
}

.module__head{
  padding: 14px 14px 10px;
  display:flex;
  justify-content:space-between;
  align-items:flex-start;
  gap:10px;
}
.module__kicker{
  color: var(--muted);
  font-weight: 850;
  font-size: 12px;
  letter-spacing: .2px;
  text-transform: uppercase;
}
.module__title{
  margin: 4px 0 0 0;
  font-size: 16px;
  line-height: 1.15;
  font-weight: 900;
}
.module__pill{
  border:1px solid var(--border);
  background: transparent;
  color: var(--muted);
  padding: 6px 10px;
  border-radius: 999px;
  font-size: 12px;
  font-weight: 800;
  white-space:nowrap;
}

.frame{
  position: relative;
  height: var(--frameH);
  background: radial-gradient(circle at 30% 20%, rgba(255,255,255,.06), transparent 45%);
  border-top: 1px solid color-mix(in srgb, var(--border) 55%, transparent);
  border-bottom: 1px solid color-mix(in srgb, var(--border) 55%, transparent);
  overflow:hidden;
  cursor: grab;
}
.frame:active{ cursor: grabbing; }

.frame img{
  position:absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%) scale(1);
  transform-origin: center center;
  user-select:none;
  -webkit-user-drag:none;
  width: auto;
  height: auto;
  max-height: none;
}

.controls{
  padding: 12px 14px 6px;
  display:flex;
  gap: 8px;
  align-items:center;
  flex-wrap: wrap;
}
.controls .btn{ padding:10px 12px; }
.controls .iconbtn{ width: 44px; height: 38px; }

.module__desc{
  margin: 0;
  padding: 6px 14px 14px;
  color: var(--muted);
  font-size: 13px;
  line-height: 1.45;
}

.footer{
  padding: 20px 0 44px;
}
.footer__inner{
  display:flex;
  justify-content:space-between;
  gap:10px;
  border-top:1px solid var(--border);
  padding-top:14px;
  color: var(--muted);
  font-size: 13px;
}
.link{
  text-decoration:none;
  border-bottom:1px dashed color-mix(in srgb, var(--muted) 55%, transparent);
}
.link:hover{ color: var(--fg); }

/* =========================
   Viewer / Lightbox
========================= */
.viewer{
  position: fixed;
  inset: 0;
  display:none;
  z-index: 200;
}
.viewer.is-open{ display:block; }
.viewer__backdrop{
  position:absolute;
  inset:0;
  background: rgba(0,0,0,.72);
}
.viewer__panel{
  position: relative;
  margin: 14px auto;
  width: min(1280px, calc(100% - 22px));
  height: calc(100% - 28px);
  background: color-mix(in srgb, var(--bg) 92%, black);
  border: 1px solid var(--border);
  border-radius: var(--r2);
  box-shadow: var(--shadow);
  display:flex;
  flex-direction:column;
  overflow:hidden;
}
.viewer__toolbar{
  display:flex;
  justify-content:space-between;
  align-items:center;
  gap: 10px;
  padding: 10px 10px;
  border-bottom:1px solid var(--border);
  background: color-mix(in srgb, var(--card2) 70%, transparent);
}
.viewer__title{
  font-weight: 900;
  font-size: 13px;
  color: var(--muted);
  white-space: nowrap;
  overflow:hidden;
  text-overflow: ellipsis;
  max-width: 45%;
}
.viewer__buttons{
  display:flex;
  gap: 8px;
  flex-wrap: wrap;
  justify-content:flex-end;
}
.viewer__stage{
  position: relative;
  flex: 1;
  overflow:hidden;
  cursor: grab;
  background: radial-gradient(circle at 30% 20%, rgba(255,255,255,.06), transparent 45%);
}
.viewer__stage:active{ cursor: grabbing; }
.viewer__stage img{
  position:absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%) scale(1);
  transform-origin:center center;
  user-select:none;
  -webkit-user-drag:none;
  max-width:none;
}
.viewer__hint{
  padding: 8px 10px;
  border-top:1px solid var(--border);
  color: var(--muted);
  font-size: 12px;
  background: color-mix(in srgb, var(--card2) 50%, transparent);
}
